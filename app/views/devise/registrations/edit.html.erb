<div class="card z-depth-5">
  <div class="card-content">
    <div class="card-title">Editar Cuenta</div>
    <div class="panel-body">
      <% if current_user.rut.nil?%>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label 'Nombre' %><br />
            <%= f.text_field :name, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Apellidos' %><br />
            <%= f.text_field :last_name, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Rut' %><br />
            <%= f.text_field :rut, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Contraseña Actual' %> <span class="label">(necesitamos su contraseña actual para confirmar los cambios)</span>
            <%= f.password_field :current_password, autocomplete: "off",class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Guardar", class: "btn green lighten-1" %>
          </div>
        <% end %>
      <%else %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label 'Nombre' %><br />
            <%= f.text_field :name, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Apellidos' %><br />
            <%= f.text_field :last_name, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Rut' %><br />
            <%= f.text_field :rut, autofocus: true,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'Correo' %><br />
            <%= f.email_field :email, autofocus: true,class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label 'Contraseña' %> <span>(dejar en blanco si no desea cambiarlo) 6 Caracteres minimos</span>
            <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label 'Confirmar Contraseña' %>
            <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label 'Contraseña Actual' %> <i>(necesitamos su contraseña actual para confirmar los cambios)</i>
            <%= f.password_field :current_password, autocomplete: "off",class: "form-control",required:true %>
          </div>

          <div class="form-group">
            <%= f.submit "Actualizar",class: "btn green lighten-1" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to "Regresar", :back %>
    </div>
  </div>
</div>
