<div class="container-fluid">
  <div class="card z-depth-5">
    <div class="card-content">
      <div class="card-title">Solicitudes</div>
      <table class="responsive-table centered highlight">
        <thead>
          <tr>
            <th>Fecha/Hora de Ingreso</th>
            <th>Resumen</th>
            <th>Nombre Contacto - Empresa</th>
            <th colspan="3">-</th>
          </tr>
        </thead>
        <tbody>
          <% @petitions.each do |petition| %>
            <tr>
              <td><%= petition.created_at.strftime('%d-%m-%Y %H:%m') %></td>
              <td><%= petition.summary %></td>
              <td><%= "#{petition.client.name} - #{petition.client.enterprise}" %></td>
              <td><%= link_to 'Mostrar', petition, class:'orange-text' %></td>
              <td><%= link_to 'Editar', edit_petition_path(petition), class:'orange-text' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="card-action">
        <%= link_to 'Crear nueva Solicitud', new_petition_path %>
      </div>
    </div>
  </div>
</div>
