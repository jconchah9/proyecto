<div class="container">
  <div class="card black-text">
    <div class="card-content">
      <div class="card-title">Detalle de visita</div>
      <p id="notice"><%= notice %></p>
      <p>Fecha de visita: <%= @calendar.visit_date.strftime('%d-%m-%Y') %></p>
      <p>Estado: <%= @calendar.state %></p>
      <p>Resumen: <%= @calendar.sumary %></p>
      <p>Estudio: <%= link_to 'Ver Detalle', study_path(@calendar.study.id), class: 'orange-text' %></p>
    </div>
    <div class="card-action">
      <%= link_to 'Editar', edit_calendar_path(@calendar) %>
      <%= link_to 'Atras', history_admin_index_url(id: @calendar.study.petition.id) %>
    </div>
  </div>
</div>
