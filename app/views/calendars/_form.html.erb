<%= form_for(calendar) do |f| %>
  <% if calendar.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(calendar.errors.count, "error") %></strong> al tratar de enviar la solicitud.
      <% calendar.errors.full_messages.each do |message| %>
        <ul>
          <li><strong><%= message %></strong></li>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "Fecha para visitar" %>
    <%= f.text_field :visit_date, class: 'datepicker form-control', required: :true%>
  </div>
  <div class="form-group">
    <%= f.label "Resumen" %>
    <%= f.text_area :sumary, class:"form-control", required: :true %>
  </div>
  <%= f.hidden_field :study_id, value:params[:study_id] %>
  <div class="form-group">
    <%= f.submit "Guardar Visita", class:"btn btn-success pull-right" %>
  </div>
<% end %>
