<div class="card">
  <div class="card-content">
    <div class="card-title">
      Calendarios de visita
    </div>
    <table>
      <thead>
        <tr>
          <th>Fecha de visita</th>
          <th>Estado</th>
          <th>Resumen</th>
          <th>ID del Estudio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @calendars.each do |calendar| %>
          <tr>
            <td><%= calendar.visit_date.strftime('%d-%m-%Y') %></td>
            <td><%= calendar.state %></td>
            <td><%= calendar.sumary %></td>
            <td><%= calendar.study.id %></td>
            <td><%= link_to 'Mostrar', calendar %></td>
            <td><%= link_to 'Editar', edit_calendar_path(calendar) %></td>
            <td><%= link_to 'Eliminar', calendar, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
