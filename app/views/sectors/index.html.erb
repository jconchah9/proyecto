<p id="notice"><%= notice %></p>

<h1>Sectores</h1>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Planta</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.name.capitalize %></td>
        <td><%= sector.plant.name.capitalize %></td>
        <td><%= sector.detail_contract.contract.company.name.capitalize %></td>

        <td><%= link_to 'Mostrar', sector %></td>
        <td><%= link_to 'Editar', edit_sector_path(sector) %></td>
        <td><%= link_to 'Eliminar', sector, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

