<%= form_for(study) do |f| %>
  <% if study.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(study.errors.count, "error") %></strong> al tratar de enviar la solicitud.
        <% study.errors.full_messages.each do |message| %>
          <ul>
            <li><strong><%= message %></strong></li>
          </ul>
        <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="">
      <div class="">
        <span>Archivo de factibilidad</span>
        <%= f.file_field :feasibility %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Resumen"%>
    <%= f.text_area :summary, class:"form-control", value:'' %>
  </div>
    <%= f.hidden_field :petition_id, value:params[:petition_id] %>
  <div class="form-group pull-right">
    <%= f.submit "Guardar",class:"btn btn-success" %>
  </div>
<% end %>
