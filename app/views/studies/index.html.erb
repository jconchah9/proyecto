<div class="card z-depth-5">
  <div class="card-content">
    <div class="card-title">Estudios</div>
    <table class="responsive-table centered highlight">
      <thead>
        <tr>
          <th>Resumen</th>
          <th>Estado</th>
          <th>Peticion</th>
          <th colspan="3">-</th>
        </tr>
      </thead>
      <tbody>
        <% @studies.each do |study| %>
          <tr>
            <td><%= study.summary %></td>
            <td><%= study.state %></td>
            <td><%= study.petition.id %></td>
            <td><%= link_to 'Mostar', study %></td>
            <td><%= link_to 'Editar', edit_study_path(study) %></td>
            <td><%= link_to 'Eliminar', study, method: :delete, data: { confirm: '! Estas seguro? ยก' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-action">
    <%= link_to 'Crear estudio', new_study_path %>
  </div>
</div>
