<%= form_for(contract) do |f| %>
  <% if contract.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(contract.errors.count, "error") %></strong> al tratar de enviar la solicitud.
      <% contract.errors.full_messages.each do |message| %>
        <ul>
          <li><strong><%= message %></strong></li>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="panel-title">
        Informacion del servicio
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-6">
          <div class="form-group">
            <%= f.label :start_date, 'Fecha de inicio del servicio' %>
            <%= f.text_field :start_date, class: 'datepicker form-control', required: :true %>
          </div>
        </div>
        <div class="col-md-6  col-sm-6">
          <div class="form-group">
            <%= f.label :end_date, 'Fecha de termino del servicio', class:'active black-text' %>
            <%= f.text_field :end_date, class: 'datepicker form-control', required: :true  %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= f.fields_for :company do |company| %>
    <%= render 'company_fields', f: company %>
  <% end %>

  <div class="form-group pull-right">
    <%= f.hidden_field :acceptance_id, value: params[:id] %>
    <%= f.submit 'Generar Contrato', class: 'btn btn-success' %>
  </div>
<% end %>
